# Load API tokens from macOS Keychain
export EXAMPLE_TOKEN=$(security find-generic-password -a "$USER" -s "example_token" -w 2>/dev/null || echo "")

# 1Password-stored secrets
export EXAMPLE_1PASSWORD_TOKEN="op://path/to/token"

